{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "sourceMap": false,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@city/ui-kit-core": ["./packages/common/src"],
      "@city/ui-kit": ["./packages/ui-kit/src"],
      "@city/ui-kit-mobile": ["./packages/ui-kit-mobile/src"]
    }
  }
}
